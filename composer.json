{
    "name": "nswdpc/silverstripe-authentication-boilerplate",
    "description": "Boilerplate default access rules for Silverstripe websites",
    "type": "silverstripe-vendormodule",
    "license": "BSD-3-Clause",
    "keywords": [
      "silverstripe",
      "members",
      "password",
      "pwnage",
      "pwned",
      "mfa",
      "nswdpc",
      "2-factor",
      "2fa",
      "authentication",
      "security"
    ],
    "require": {
        "silverstripe/totp-authenticator": "^5",
        "nswdpc/silverstripe-pwnage-hinter": "^1",
        "silverstripe/securityreport" : "^3",
        "spomky-labs/otphp": "^11",
        "silverstripe/framework" : "^5"
    },
    "require-dev": {
        "cambis/silverstripe-rector": "^0.5.1",
        "phpunit/phpunit": "^9.5",
        "syntro/silverstripe-phpstan": "^5",
        "nswdpc/ci-files": "^1"
    },
    "authors": [
        {
            "name": "James Ellis",
            "role": "Developer"
        },
        {
            "name": "Mark Taylor",
            "role": "Developer"
        }
    ],
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "php-http/discovery": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
